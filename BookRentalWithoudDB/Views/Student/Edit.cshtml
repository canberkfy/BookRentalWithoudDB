@model Student

<h2>Edit Student</h2>

<form method="post" asp-action="Edit" asp-controller="Student">
    <table>
        <tr>
            <td width="200">ID</td>
            <td><input asp-for="ID" class="form-control" readonly /></td>
        </tr>
        <tr>
            <td width="200">Name</td>
            <td><input asp-for="Name" class="form-control" /></td>
        </tr>
        <tr>
            <td width="200">Surname</td>
            <td><input asp-for="Surname" class="form-control" /></td>
        </tr>
        <tr>
            <td width="200">Birth Date</td>
            <td><input asp-for="BirthDate" type="date" class="form-control" /></td>
        </tr>
        <tr>
            <td>
                <button type="submit" class="btn btn-success">Save Changes</button>
            </td>
            <td>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </td>
        </tr>
    </table>
</form>